{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"rootDir": "src",
		"moduleResolution": "nodenext",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictFunctionTypes": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": true
	},
	"exclude": ["dist"]
}
