generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum BalanceStatus {
  AWAITING_PAYMENT
  PAID
  CLAIMED
}

enum BalanceChannel {
  EMAIL
  SMS
  // FACEBOOK
  // X
  // TELEGRAM
  // TIKTOK
  // INSTAGRAM
  // WHATSAPP
  // SIGNAL
}

model Balances {
  id                 String  @id @default(cuid())
  paymentRequest     String  @unique
  receiverSatsAmount Int
  platformSatsAmount Int?
  receiver           String
  message            String?

  status  BalanceStatus  @default(AWAITING_PAYMENT)
  channel BalanceChannel

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
