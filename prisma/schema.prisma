// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Status {
  AWAITING_PAYMENT
  PAID
  CLAIMED
}

enum Platform {
  EMAIL
  SMS
  FACEBOOK
  X
  TELEGRAM
  TIKTOK
  INSTAGRAM
  WHATSAPP
  SIGNAL
}

model Balances {
  id                 String  @id @default(cuid())
  receiverSatsAmount Int
  donationSatsAmount Int?
  receiver           String
  message            String?

  status   Status   @default(AWAITING_PAYMENT)
  platform Platform

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
